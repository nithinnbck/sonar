pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'jenkins-sonar') { 
          sh '''echo "Absolute Folder "'''
          sh "sonar-scanner -Dsonar.projectKey=python -Dsonar.sources=."
        }
      }
    }
  }
}
