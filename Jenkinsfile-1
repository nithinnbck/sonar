pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
stage('SonarQube analysis') {
steps{
  script {
  def scannerHome = tool 'SonarQubeScannner';
  }
  withSonarQubeEnv('jenkins-sonar') { // If you have configured more than one global server connection, you can specify its name
    sh '''
    echo "Absolute Folder Path="
    '''
    sh "sonar-scanner -Dsonar.projectKey=python -Dsonar.sources=."
  }
  }
}
}
